{
  "name": "wallgame",
  "version": "1.0.0",
  "description": "Massive multiplayer RTS browser game with territorial control mechanics",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev --workspace=@wallgame/server",
    "dev:client": "npm run dev --workspace=@wallgame/client",
    "build": "npm run build --workspaces",
    "start": "npm run start --workspace=@wallgame/server",
    "test": "npm run test --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
