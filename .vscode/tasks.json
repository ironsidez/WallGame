{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "npm",
            "args": ["install"],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build All",
            "type": "shell",
            "command": "npm",
            "args": ["run", "build"],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Dev Server",
            "type": "shell",
            "command": "npm",
            "args": ["run", "dev"],
            "group": "build",
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Start Server Only",
            "type": "shell",
            "command": "npm",
            "args": ["run", "dev:server"],
            "group": "build",
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Start Client Only",
            "type": "shell",
            "command": "npm",
            "args": ["run", "dev:client"],
            "group": "build",
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Build Shared Package",
            "type": "shell",
            "command": "npm",
            "args": ["run", "build", "--workspace=@wallgame/shared"],
            "group": "build",
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "Test Database Connection",
            "type": "shell",
            "command": "npx",
            "args": ["ts-node", "packages/server/src/test-db.ts"],
            "group": "test",
            "problemMatcher": []
        }
    ]
}